@model List<PagoModel> //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Listar Pago";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<div class="card m-4">
        <div class="row card-oppacity-orange ">
            <div class="card-header">
                Lista de Pagos
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                <thead class ="text-center">
                        <tr>
                            <th>MontoFinal</th>
                            <th>Estado</th>
                            <th>ServicioPago</th>
                            <th>MedioPago</th>
                            <th>UltimosCuatro</th>
                            <th>Cuotas</th>
                            <th>CodigoBarras</th>
                            <th>Cvu</th>
                            <th>Número Reserva</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td> @item.MontoFinal</td>
                            <td> @item.Estado</td>
                            <td> @item.ServicioPago</td>
                            <td> @item.MedioPago</td>
                            <td> @item.UltimosCuatro</td>
                            <td> @item.Cuotas</td>
                            <td> @item.CodigoBarras</td>
                            <td> @item.Cvu</td>
                            <td> @item.IdReserva</td>
                        </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>