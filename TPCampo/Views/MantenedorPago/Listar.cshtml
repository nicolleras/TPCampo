@model List<PagoModel> //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Listar Pago";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}


<div class="card">
    <div class="card-header">
        Lista de Pagos
    </div>
    <div class="card-body">
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>MontoFinal</th>
                    <th>Estado</th>
                    <th>ServicioPago</th>
                    <th>MedioPago</th>
                    <th>UltimosCuatro</th>
                    <th>Cuotas</th>
                    <th>CodigoBarras</th>
                    <th>Cvu</th>
                    <th>IdReserva</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.MontoFinal</td>
                        <td> @item.Estado</td>
                        <td> @item.ServicioPago</td>
                        <td> @item.MedioPago</td>
                        <td> @item.UltimosCuatro</td>
                        <td> @item.Cuotas</td>
                        <td> @item.CodigoBarras</td>
                        <td> @item.Cvu</td>
                        <td> @item.IdReserva</td>
                        <td>                            
                            <button asp-action="Editar" asp-controller="MantenedorPago" asp-route-IdPago="@item.IdPago" class="edit-btn"><img src="~/edit-icon.png" class="edit-icon" title="editar"></img></button>
                            
                            
                            <button asp-action="Eliminar" asp-controller="MantenedorPago" asp-route-IdPago="@item.IdPago" class="del-btn mb-1" title="eliminar">
                        <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg"
                            class="icon">
                            <path transform="translate(-2.5 -1.25)"
                                d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z"
                                id="Fill"></path>
                        </svg>
                    </button>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>