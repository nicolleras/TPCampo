@model PagoModel //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}
<!-- NEW -->

    <div class="card m-4">
        <div class="row card-oppacity-orange">
            <div class="card-header">
                ¿Cómo querés pagar?
            </div>
            <div class="card-body">
                <form asp-action="Guardar" asp-controller="MantenedorPago" method="post">
                    <div class="mb-3">
                        <label class="form-label">MontoFinal</label>
                        <input asp-for="MontoFinal" type="text" step="any" class="form-control"
                            value="@(ViewBag.montoTotal)" readonly />
                        <span asp-validation-for="MontoFinal" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <input asp-for="Estado" type="text" class="form-control" value="@(ViewBag.estado)" readonly />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                <div class="input-group mb-3 col-4">
                    <label class="input-group-text" for="inputGroupSelect01">Servicio de Pago</label>
                    <select asp-for="ServicioPago" class="form-select col-4" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="PRISMA">PRISMA</option>
                        <option value="MERCADO_PAGO">MERCADO PAGO</option>
                        <option value="RAPIPAGO">RAPIPAGO</option>
                        <option value="PAGOFACIL">PAGOFACIL</option>
                    </select>
                    <span asp-validation-for="ServicioPago" class="text-danger"></span>
                </div>

                <div class="input-group mb-3 col-4">
                    <label class="input-group-text" for="inputGroupSelect01">Medio de Pago</label>
                    <select asp-for="MedioPago" class="form-select col-4" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="CREDITO">CREDITO</option>
                        <option value="DEBITO">DEBITO</option>
                        <option value="EFECTIVO">EFECTIVO</option>
                    </select>
                    <span asp-validation-for="MedioPago" class="text-danger"></span>
                </div>

                    <div class="mb-3">
                        <label class="form-label">Ultimos Cuatro dígitos de la tarjeta</label>
                        <input asp-for="UltimosCuatro" type="text" class="form-control" maxlength="4" />
                        <span asp-validation-for="UltimosCuatro" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cuotas</label>
                    <input asp-for="Cuotas" type="text" class="form-control" maxlength="2" />
                        <span asp-validation-for="Cuotas" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CodigoBarras</label>
                        <input asp-for="CodigoBarras" type="text" class="form-control" />
                        <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cbu</label>
                        <input asp-for="Cvu" type="text" class="form-control"/>
                        <span asp-validation-for="Cvu" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Número de reserva</label>
                        <input asp-for="IdReserva" type="text" class="form-control" value="@(ViewBag.idReserva)"
                            readonly />
                        <span asp-validation-for="IdReserva" class="text-danger"></span>
                    </div>
                    <br>
                    <button type="submit confirm-button">
                                <div class="svg-wrapper-1">
                                    <div class="svg-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor" d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"></path>
                                    </svg>
                                    </div>
                                </div>
                                <span>Confirmar</span>
                            </button>
                    <a asp-action="Listar" asp-controller="MantenedorPago" class="btn btn-warning">Volver al listado</a>
                </form>
            </div>
        </div>
    </div>

