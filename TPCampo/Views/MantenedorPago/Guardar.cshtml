@model PagoModel //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}
<!-- NEW -->

    <div class="card">
        <div class="row card-oppacity-orange">
            <div class="card-header">
                ¿Cómo querés pagar?
            </div>
            <div class="card-body">
                <form asp-action="Guardar" asp-controller="MantenedorPago" method="post">
                    <div class="mb-3">
                        <label class="form-label">MontoFinal</label>
                        <input asp-for="MontoFinal" type="text" step="any" class="form-control"
                            value="@(ViewBag.montoTotal)" readonly />
                        <span asp-validation-for="MontoFinal" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <input asp-for="Estado" type="text" class="form-control" value="@(ViewBag.estado)" readonly />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                <div class="mb-3">
                    <label class="form-label">Servicio de Pago</label><br>
                    <input asp-for="ServicioPago" type="radio" id="PRISMA" name="ServicioPago" value="PRISMA">
                    <label for="ServicioPago"> PRISMA</label><br>
                    <input asp-for="ServicioPago" type="radio" id="MERCADO_PAGO" name="ServicioPago" value="MERCADO_PAGO">
                    <label for="ServicioPago"> MERCADO PAGO</label><br>
                    <input asp-for="ServicioPago" type="radio" id="RAPIPAGO" name="ServicioPago" value="RAPIPAGO">
                    <label for="ServicioPago"> RAPIPAGO</label><br>
                    <input asp-for="ServicioPago" type="radio" id="PAGOFACIL" name="ServicioPago" value="PAGOFACIL">
                    <label for="ServicioPago"> PAGOFACIL</label><br>
                    <span asp-validation-for="ServicioPago" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Medio de Pago</label><br>
                    <input asp-for="MedioPago" type="radio" id="CREDITO" name="MedioPago" value="CREDITO">
                    <label for="MedioPago"> CREDITO</label><br>
                    <input asp-for="MedioPago" type="radio" id="DEBITO" name="MedioPago" value="DEBITO">
                    <label for="MedioPago"> DEBITO</label><br>
                    <input asp-for="MedioPago" type="radio" id="EFECTIVO" name="MedioPago" value="EFECTIVO">
                    <label for="MedioPago"> EFECTIVO</label><br>
                    <span asp-validation-for="MedioPago" class="text-danger"></span>
                </div>

                    <div class="mb-3">
                        <label class="form-label">Ultimos Cuatro dígitos de la tarjeta</label>
                        <input asp-for="UltimosCuatro" type="text" class="form-control" required />
                        <span asp-validation-for="UltimosCuatro" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cuotas</label>
                        <input asp-for="Cuotas" type="text" class="form-control" required />
                        <span asp-validation-for="Cuotas" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CodigoBarras</label>
                        <input asp-for="CodigoBarras" type="text" class="form-control" required />
                        <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cvu</label>
                        <input asp-for="Cvu" type="text" class="form-control" required />
                        <span asp-validation-for="Cvu" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IdReserva</label>
                        <input asp-for="IdReserva" type="text" class="form-control" value="@(ViewBag.idReserva)"
                            readonly />
                        <span asp-validation-for="IdReserva" class="text-danger"></span>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Pagar</button>
                    <a asp-action="Listar" asp-controller="MantenedorPago" class="btn btn-warning">Volver al listado</a>
                </form>
            </div>
        </div>
    </div>

