@model UsuarioModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}
<!-- NEW -->
    <div class="col d-flex justify-content-center">
        <div class="card col-4 p-2">
            <div class="row card-oppacity-orange">
                <div class="card-header">
                    CrearCuenta
                </div>
                <div class="card-body">

                    <form asp-action="Index" asp-controller="HomeUsuario" method="post" class="form">

                        <input asp-for="IdUsuario" type="hidden" class="form-control" />
                        <div class="">
                            <label class="form-label">Nombre</label>
                            <input asp-for="Nombre" type="text" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label">Apellido</label>
                            <input asp-for="Apellido" type="text" class="form-control" required />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" type="text" placeholder="Por ejemplo, example@dominio.com"
                                class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label"> Contraseña</label>
                            <input asp-for="Contraseña" type="password" class="form-control" required />
                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>
                        <div class="col-4 mb-2">
                            <label class="form-label">Rol de Usuario</label><br>

                            <input asp-for="Rol" type="radio" id="cliente" name="rol" value="cliente">
                            <label for="cliente"> Cliente</label><br>

                            <input asp-for="Rol" type="radio" id="administrador" name="rol" value="administrador">
                            <label for="administrador"> Administrador</label><br>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label">FechaNacimiento</label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control" required />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                        <!--  <div class="mb-3">
                    <label class="form-label">TipoDocumento</label>
                    <input asp-for="TipoDocumento" type="text"  class="form-control" />
                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                </div> -->
                        <div class="">
                            <label class="form-label">Dni</label>
                            <input asp-for="Dni" type="number" class="form-control" required />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label">Telefono</label>
                            <input asp-for="Telefono" type="number" class="form-control" required />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-row-reverse mt-3">
                            <button type="submit confirm-button">
                                <div class="svg-wrapper-1">
                                    <div class="svg-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor" d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"></path>
                                    </svg>
                                    </div>
                                </div>
                                <span>Confirmar</span>
                            </button>
                            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver al
                                listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
