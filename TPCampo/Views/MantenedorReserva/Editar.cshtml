@model ReservaModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- NEW -->

    <div class="col ms-2">
        <div class="card-header">
            <h4 class="subtitle">Editar Reserva</h4>
        </div>
        <div class="card-body">

            <form asp-action="Editar" asp-controller="MantenedorReserva" method="post" class="form">

                <input asp-for="IdReserva" type="hidden" class="form-control" />
                <div class="mb-3 col-4">
                    <label class="form-label">Destino</label>
                    <input asp-for="Destino" type="text" class="form-control" required />
                    <span asp-validation-for="Destino" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">FechaInicio</label>
                    <input asp-for="FechaInicio" type="date" class="form-control" required />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">FechaFin</label>
                    <input asp-for="FechaFin" type="date" class="form-control" required />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">Estado</label>
                    <input asp-for="Estado" type="text" class="form-control" required />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">MontoTotal</label>
                    <input asp-for="MontoTotal" type="text" inputmode="numeric" step="0.01" class="form-control" required />
                    <span asp-validation-for="MontoTotal" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">IdVehiculo</label>
                    <input asp-for="IdVehiculo" type="number" class="form-control" required />
                    <span asp-validation-for="IdVehiculo" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label class="form-label">IdUsuario</label>
                    <input asp-for="IdUsuario" type="number" class="form-control" required />
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>
                <br>
                <div class="d-flex flex-row-reverse">
                    <button type="submit confirm-button">
                                <div class="svg-wrapper-1">
                                    <div class="svg-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor" d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"></path>
                                    </svg>
                                    </div>
                                </div>
                                <span>Confirmar</span>
                            </button>
                    <a asp-action="Listar" asp-controller="MantenedorReserva" class="btn btn-warning">Volver al
                        listado</a>
                </div>
            </form>
        </div>
    </div>

