@model List<ReservaModel> //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Listar Reserva";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Reservas
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="MantenedorReserva" class="btn btn-success">Crear Nueva Reserva</a>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Destino</th>
                    <th>FechaInicio</th>
                    <th>FechaFin</th>
                    <th>Estado</th>
                    <th>MontoTotal</th>
                    <th>IdVehiculo</th>
                    <th>IdUsuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Destino</td>
                        <td> @item.FechaInicio</td>
                        <td> @item.FechaFin</td>
                        <td> @item.Estado</td>
                        <td> @item.MontoTotal</td>
                        <td> @item.IdVehiculo</td>
                        <td> @item.IdUsuario</td>
                        <td>
                            <a asp-action="Guardar" asp-controller="MantenedorPago" class="btn btn-primary btn-sm"
                                asp-route-IdReserva="@item.IdReserva">Pagar</a>
                            <a asp-action="Editar" asp-controller="MantenedorReserva" class="btn btn-primary btn-sm"
                                asp-route-IdReserva="@item.IdReserva">Editar Reserva</a>
                            <a asp-action="Eliminar" asp-controller="MantenedorReserva" class="btn btn-danger btn-sm"
                                asp-route-IdReserva="@item.IdReserva">Eliminar Reserva</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>

<div class="card">
    <div class="card-header">
        Lista de Reservas
    </div>
    <div class="card-body">
        <hr />
        <div class="row">
                @foreach (var item in Model)
                {                   
                    <div class="col-6">
                        <div class="row">
                            <div class="card col-6">
                                <ul>
                                    <li>Destino: @item.Destino</li>
                                    <li>FechaInicio: @item.FechaInicio</li>
                                    <li>FechaFin: @item.FechaFin</li>
                                    <li>Estado: @item.Estado</li>
                                    <li>MontoTotal: @item.MontoTotal</li>
                                    <li>IdVehiculo: @item.IdVehiculo</li>
                                    <li>IdUsuario: @item.IdUsuario</li>
                                    <li>
                                        @if (@item.Estado == "PENDIENTE")
                                        {
                                        <a asp-action="Guardar" asp-controller="MantenedorPago" class="btn btn-primary btn-sm" asp-route-IdReserva="@item.IdReserva" asp-route-MontoTotal="@item.MontoTotal" asp-route-Estado="@item.Estado">Pagar</a>
                                        }
                                        <!--<a asp-action="Editar" asp-controller="MantenedorReserva" class="btn btn-primary btn-sm" asp-route-IdReserva="item.IdReserva">Editar Reserva</a>-->
                                        <a asp-action="Eliminar" asp-controller="MantenedorReserva" class="btn btn-danger btn-sm" asp-route-IdReserva="@item.IdReserva">Eliminar Reserva</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>



