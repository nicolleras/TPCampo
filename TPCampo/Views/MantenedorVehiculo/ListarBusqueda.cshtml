@model List<VehiculoModel> //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Listar Vehiculos";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}


<div class="card">
    <div class="card-header">
        Lista de Vehiculos Disponibles
    </div>
    <div class="card-body">
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Imagen</th>
                    <th>PrecioPorDia</th>
                    <th>
                        Capacidad
                        Pasajeros
                    </th>
                    <th>
                        Capacidad
                        Equipaje
                    </th>
                    <th>
                        Tipo de
                        Caja
                    </th>
                    <th>
                        Cantidad de
                        Puertas
                    </th>
                    <th>
                        Aire
                        Acondicionado
                    </th>
                    <th>
                        Tipo de
                        Cobertura
                    </th>
                    <th>KmHabilitado</th>
                    <th>
                        IdEmpresa
                        Proveedora
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Marca</td>
                        <td> @item.Modelo</td>
                        <td> @item.Imagen</td>
                        <td> @item.PrecioPorDia</td>
                        <td> @item.CapacidadPasajeros</td>
                        <td> @item.CapacidadEquipaje</td>
                        <td> @item.TipoCaja</td>
                        <td> @item.CantidadDePuertas</td>
                        <td> @item.AireAcondicionado</td>
                        <td> @item.TipoDeCobertura</td>
                        <td> @item.KmHabilitado</td>
                        <td> @item.IdEmpresaProveedora</td>
                        <td>
                            <a asp-action="Reservar" asp-controller="MantenedorVehiculo" class="btn btn-success" asp-route-IdVehiculo="@item.IdVehiculo" >Reservar Vehiculo</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>
