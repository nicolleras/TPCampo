@model VehiculoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
        <div class="card-header">
            <div class="row d-flex flex-wrap">
                <div class="col-1">
                    <a asp-action="Listar" asp-controller="MantenedorVehiculo"><img src="~/goback-icon.png" alt="Volver"
                            height="30px" width="20px"></a>
                </div>
                <div class="col-9">
                    <h4 class="subtitle">Eliminar</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="MantenedorVehiculo" method="post">

            <input asp-for="IdVehiculo" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el Vehiculo : @Html.DisplayTextFor(m => m.IdVehiculo) ?
            </div>
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="del-btn mb-1" title="eliminar">
                    <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                        <path transform="translate(-2.5 -1.25)"
                            d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z"
                            id="Fill"></path>
                    </svg>
                </button>

            </div>
        </form>

    </div>

