@model List<VehiculoModel> //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Listar Vehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="card-body">

        <div class="row card-oppacity-orange m-4 towhite">
            <div>
                <h4 class="megatitle">Vehiculos</h4>
            </div>
            <div class="flex-row-reverse d-flex">
                <div class="d-flex flex-row-reverse">
                    <a asp-action="Guardar" asp-controller="MantenedorVehiculo" class="btn btn-success">Crear
                        Nuevo
                        Vehiculo</a>
                </div>
            </div>

            <div class="row">
                @if (Model != null)
                {
                @foreach (var item in Model)
                {
                <div class="col-5">
                    <div class="row">
                        <div class="card vehicle-card col-5 mb-3 ms-3">
                            <img class="card-img-top mt-2" src="@item.Imagen">
                            <div class="card-body p-0">
                                <ul class="none-style-list">
                                    <li class="vehicle-title"> <strong>@item.Modelo</strong></li>
                                    <li> <strong>Marca</strong>: @item.Marca</li>
                                    <li> <strong>Precio</strong>: $ @item.PrecioPorDia</li>
                                    <li> <strong>Capacidad</strong>: @item.CapacidadPasajeros</li>
                                    <li> <strong>Equipaje</strong>: @item.CapacidadEquipaje Kg</li>
                                    <li> <strong>Caja</strong>: @item.TipoCaja</li>
                                    <li> <strong>Puertas</strong>: @item.CantidadDePuertas</li>
                                    <li> <strong>Aire Acondicionado</strong>: @item.AireAcondicionado</li>
                                    <li> <strong>Cobertura</strong>: @item.TipoDeCobertura</li>
                                    <li> <strong>Km habilitado</strong>: @item.KmHabilitado</li>
                                    <li> <strong>Empresa Proveedora</strong>: @item.IdEmpresaProveedora</li>
                                    <li>
                                        <div class="d-flex flex-row-reverse">
                                            <a asp-action="Editar" asp-controller="MantenedorVehiculo"
                                                class="btn btn-primary btn-sm m-2"
                                                asp-route-IdVehiculo="@item.IdVehiculo">Editar
                                                Vehiculo</a>
                                            <a asp-action="Eliminar" asp-controller="MantenedorVehiculo"
                                                class="btn btn-danger btn-sm m-2"
                                                asp-route-IdVehiculo="@item.IdVehiculo">Eliminar
                                                Vehiculo</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                }
                }
            </div>
        </div>
    </div>
    </div>


