@model UsuarioModel //Clase a utilizar en el formulario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutUsuario1.cshtml";
}

<div class="card">
    <div class="card-header">
        Login
    </div>
    <div class="card-body">

        <form asp-action="Login" asp-controller="Acceso" method="post">

            <div class="row">
                <div class="col-4">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="text" placeholder="Por ejemplo, alguien@dominio.com"
                        class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label class="form-label">Contraseña</label>
                    <input asp-for="Contraseña" type="text" placeholder="******" class="form-control" required />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>

                    <div class="d-flex gap-1 col" style="margin-top: 10px">
                        <button asp-action="Index" asp-controller="HomeUsuario" class="btn btn-primary">Iniciar
                            sesión </button>
                        <button asp-action="CrearCuenta" asp-controller="Mantenedor" class="btn btn-warning">Crear
                            cuenta </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


