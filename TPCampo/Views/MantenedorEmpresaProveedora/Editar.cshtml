@model EmpresaProveedoraModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- NEW -->

    <div class="col d-flex justify-content-center m-2">
        <div class="card">
            <div class="row card-oppacity-orange">
                <div class="card-header">
                    <h4 class="subtitle">Editar</h4>
                </div>
                <div class="card-body">

                    <form asp-action="Editar" asp-controller="MantenedorEmpresaProveedora" method="post">

                        <input asp-for="IdEmpresaProveedora" type="hidden" class="form-control" />
                        <div class="">
                            <label class="form-label mt-2">Nombre</label>
                            <input asp-for="Nombre" type="text" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label mt-2">Logo</label>
                            <input asp-for="Logo" type="text" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="">
                            <label class="form-label mt-2">CalificacionPromedio</label>
                            <input asp-for="CalificacionPromedio" type="number" class="form-control" />
                            <span asp-validation-for="CalificacionPromedio" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-row-reverse mt-2">
                            <button type="submit confirm-button">
                                <div class="svg-wrapper-1">
                                    <div class="svg-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z"></path>
                                        <path fill="currentColor" d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"></path>
                                    </svg>
                                    </div>
                                </div>
                                <span>Confirmar</span>
                            </button>
                            <a asp-action="Listar" asp-controller="MantenedorEmpresaProveedora"
                                class="btn btn-warning">Volver
                                al listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
