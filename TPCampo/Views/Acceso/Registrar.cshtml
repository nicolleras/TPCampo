<!-- NEW -->
   <div class="row mt-5">
		<div class="d-flex justify-content-center mt-5">
			<div class="user_card mt-5">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="../Views/avion.jpg" class="brand_logo" alt="Logo_Avion">
					</div>
				</div>
				<div class="d-flex justify-content-center container mt-5">
					<form action="@Url.Action("Registrar","Acceso")" method="post" class="form mt-5">

						<div class="input-group mb-3 form-label">
							<input type="text" name="Nombre" class="form-control input_user" value="" placeholder="Nombre">
						</div>
						<div class="input-group mb-3 form-label">
							<input type="text" name="Apellido" class="form-control input_user" value="" placeholder="Apellido">
						</div>
						<div class="input-group mb-3 form-label">
							<input type="text" name="Email" class="form-control input_user" value="" placeholder="Email">
						</div>
						<div class="input-group mb-2 form-label">
							<input type="password" name="Contraseña" class="form-control input_pass" value="" placeholder="Contraseña">
						</div>
						<div class="input-group mb-2 form-label">
							<input type="password" name="ConfirmarContraseña" class="form-control input_pass" value="" placeholder="Confirmar Contraseña">
						</div>
						<div class="input-group mb-3 form-label">
							<input type="date" name="FechaNacimiento" class="form-control input_user" value="" placeholder="Fecha Nacimiento">
						</div>
						<!-- <div class="input-group mb-3 form-label">
							<input type="number" name="TipoDocumento" class="form-control input_user" value="" placeholder="Tipo de documento">
						</div> -->
						<div class="input-group mb-3 form-label">
							<input type="number" name="Dni" class="form-control input_user" value="" placeholder="Dni">
						</div>
						<div class="input-group mb-3 form-label">
							<input type="number" name="Telefono" class="form-control input_user" value="" placeholder="Telefono">
						</div>

						@if (ViewData["Mensaje"] != null)
						{ 

							<div class="alert alert-danger" role="alert">
								@ViewData["Mensaje"] 
							</div>
						}


						<div class="d-flex justify-content-center mt-3 login_container">
							<button type="submit" name="button" class="btn login_btn">Registrarse</button>
						</div>
					</form>
				</div>

				<div class="mt-4">
					<div class="d-flex justify-content-center links">
						¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Acceso")" class="ml-2">Iniciar Sesion</a>
					</div>
				</div>
			</div>
		</div>
	</div>

